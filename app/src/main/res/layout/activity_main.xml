<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Scan"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/scan_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/connect_button"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/device_name"/>
    <Button
            android:text="Connect"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/connect_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:enabled="false" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/device_name"/>
    <Switch
            android:text="Temperature Notifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_temp"
            android:switchPadding="32dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_button" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <Switch
            android:text="Humidity Notifier"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/switch_humidity"
            android:splitTrack="false" android:showText="false"
            android:switchPadding="32dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/switch_temp"
            app:layout_constraintStart_toStartOf="@+id/switch_temp"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="CC50E380BDA6"
            android:ems="10"
            android:id="@+id/device_name"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:hint="Enter Device Name"/>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="414dp"
            android:layout_height="56dp"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:elevation="4dp" app:title="BLE - ESP32 - Example"
            app:titleTextColor="#FFFFFF"/>
    <TextView
            android:text="Temperature"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:fontFamily="sans-serif-medium"
            android:textSize="24sp" android:textAlignment="center" android:textColor="@color/colorPrimary"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/switch_humidity"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Humidity"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:fontFamily="sans-serif-medium"
            android:textSize="24sp" android:textAlignment="center" android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/switch_humidity"/>
    <TextView
            android:text="-"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/humidity_text"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-medium" android:textSize="18sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/temperature_text"
            android:layout_marginStart="8dp" android:textAlignment="center"/>
    <TextView
            android:text="-"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/temperature_text" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-medium" android:textSize="18sp" android:textAlignment="center"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>

    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartTemperature"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/temperature_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartHumidity"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chartTemperature" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>